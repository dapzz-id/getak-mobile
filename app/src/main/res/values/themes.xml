<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Getak" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bg_getak</item>
        <item name="colorPrimaryVariant">#1e4573</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Getak.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Getak.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Getak.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.EPresence.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.EPresence.MediumComponent</item>
        <item name="hintTextColor">@color/text_input_hint</item>
        <item name="android:textColorHint">@color/text_input_hint</item>
    </style>

    <style name="ShapeAppearance.EPresence.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="CustomTextInputStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorBoxStrokeFocused</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.EPresence.MediumComponent</item>
        <item name="hintTextColor">@color/text_input_hint</item>
        <item name="android:textColorHint">@color/text_input_hint</item>
    </style>
</resources>